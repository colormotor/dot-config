    insert_feedback_color        0xffd75f5f     \
    active_window_border_color   0xaa00ccff     \
    normal_window_border_color   0x00555555     \
    window_border_width          2              \
    window_border_radius         1              \
    window_border_blur           off            \
    window_border_hidpi          on             \
    window_border                on             \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  0              \
    bottom_padding               0              \
