# See homebewpath.. share/skhd/examples/skhdrc for more info
ctrl + alt + cmd + rshift - down : yabai -m window --focus stack.next || yabai -m window --focus south
ctrl + alt + cmd + rshift - up : yabai -m window --focus stack.prev || yabai -m window --focus north
ctrl + alt + cmd + rshift + alt - left : yabai -m window --focus west
ctrl + alt + cmd + rshift - right : yabai -m window --focus east

ctrl + alt + cmd + rshift + lshift - right : yabai -m window --swap east
ctrl + alt + cmd + rshift + lshift - left : yabai -m window --swap west
ctrl + alt + cmd + rshift + lshift - down : yabai -m window --swap south
ctrl + alt + cmd + rshift + lshift - up : yabai -m window --swap north

# ctrl + alt + cmd + rshift - 1 : yabai -m space --focus 1
# ctrl + alt + cmd + rshift - 2 : yabai -m space --focus 2
# ctrl + alt + cmd + rshift - 3 : yabai -m space --focus 3
# ctrl + alt + cmd + rshift - 4 : yabai -m space --focus 4
# ctrl + alt + cmd + rshift - 5 : yabai -m space --focus 5
# ctrl + alt + cmd + rshift - 6 : yabai -m space --focus 6
ctrl + alt + cmd + rshift - r : yabai -m space --rotate 90
ctrl + alt + cmd + rshift - x : yabai -m space --mirror x-axis
ctrl + alt + cmd + rshift - y : yabai -m space --mirror y-axis

ctrl + alt + cmd + rshift + lshift - 1 : yabai -m window --space 1
ctrl + alt + cmd + rshift + lshift - 2 : yabai -m window --space 2
ctrl + alt + cmd + rshift + lshift - 3 : yabai -m window --space 3
ctrl + alt + cmd + rshift + lshift - 4 : yabai -m window --space 4
ctrl + alt + cmd + rshift + lshift - 5 : yabai -m window --space 5
ctrl + alt + cmd + rshift + lshift - 6 : yabai -m window --space 6

ctrl + alt + cmd + rshift - space : yabai -m window --toggle float
ctrl + alt + cmd + rshift - f : yabai -m window --toggle zoom-fullscreen
ctrl + alt + cmd + rshift - d : yabai -m space --layout bsp
ctrl + alt + cmd + rshift - s : yabai -m space --layout stack

ctrl + alt + cmd + rshift + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
ctrl + alt + cmd + rshift + shift - s : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.spacebar"


ctrl + alt + cmd + rshift + shift - d : yabai -m window --display recent

# Open emacs
ctrl + alt + cmd + rshift - e: open -n -a /Applications/Emacs.app
# Open process monitor
ctrl + alt + cmd + rshift - p: /Applications/Alacritty.app/Contents/MacOS/alacritty -e htop
# open terminal window
ctrl + alt + cmd + rshift - return :  open -n -a 'Alacritty.app'
# open a finder window
ctrl + alt + cmd + rshift - n :  open ~
